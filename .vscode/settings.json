{
  "deno.enable": true,
  "deno.unstable": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "yaml.completion": true,
  "yaml.format.enable": false,
  "yaml.hover": true,
  "yaml.schemas": {
    "codegen/schema.yaml": "/vocab/*.yaml",
    "https://json-schema.org/draft/2020-12/schema": "/codegen/schema.yaml"
  },
  "yaml.validate": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.sortImports": "always"
    }
  },
  "cSpell.words": [
    "activitypub",
    "aitertools",
    "apidoc",
    "bccs",
    "btos",
    "callouts",
    "cfworker",
    "codegen",
    "Deno",
    "dereferenceable",
    "discoverability",
    "docloader",
    "fedify",
    "fediverse",
    "halfyear",
    "hongminhee",
    "httpsig",
    "jsonld",
    "keypair",
    "langstr",
    "Lemmy",
    "lume",
    "lumocs",
    "metas",
    "Misskey",
    "nodeinfo",
    "phensley",
    "Pixelfed",
    "redirections",
    "rels",
    "setext",
    "spki",
    "subproperty",
    "superproperty",
    "unfollow",
    "unfollowing",
    "urlpattern",
    "webfinger"
  ]
}
